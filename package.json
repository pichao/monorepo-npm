{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "打包组件esm、cjs格式包": "执行 yarn build:components",
        "server:example": "lerna exec --scope @yyds-npm/example -- yarn server:dev",
        "build:example:dist": "lerna exec --scope @yyds-npm/example -- yarn build:dev",
        "build:components": "lerna exec --scope @yyds-npm/components -- yarn build",
        "本地开发时可以开启watch模式打包组件": "执行 yarn build:components:w",
        "build:components:w": "lerna exec --scope @yyds-npm/components -- yarn build:w",
        "本地开发时可以开启watch模式打包工具函数": "执行 yarn build:utils:w",
        "build:utils:w": "lerna exec --scope @yyds-npm/utils -- yarn build:w",
        "打包工具函数、方法等esm、cjs格式包": "执行 yarn build:utils",
        "build:utils": "lerna exec --scope @yyds-npm/utils -- yarn build",
        "本地开发同时打包工具函数、组件esm、cjs格式包，watch模式": "执行 yarn build:components:utils:w",
        "build:components:utils:w": "lerna exec --scope @yyds-npm/components -- yarn build:w & lerna exec --scope @yyds-npm/utils -- yarn build:w",
        "同时打包工具函数、组件esm、cjs格式包": "执行 yarn build:components:utils",
        "build:components:utils": "lerna exec --scope @yyds-npm/components -- yarn build & lerna exec --scope @yyds-npm/utils -- yarn build",
        "本地运行文档": "执行 yarn storybook:server:dev",
        "storybook:server:dev": "lerna exec --scope @yyds-npm/ystorybook -- yarn storybook:server:dev",
        "打包文档生产部署文件": "执行 yarn storybook:build:prod，生成storybook-static文件夹，即为文档部署所需文件",
        "storybook:build:prod": "lerna exec --scope @yyds-npm/ystorybook -- yarn storybook:build:prod",
        "father:doc:dev": "lerna exec --scope @yyds-npm/components -- yarn father:doc:dev",
        "prepare": "husky install"
    },
    "lint-staged": {
        "packages/**/*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@babel/plugin-syntax-jsx": "^7.17.12",
        "@babel/preset-env": "^7.18.2",
        "@babel/preset-react": "^7.17.12",
        "@babel/preset-typescript": "^7.17.12",
        "@rollup/plugin-node-resolve": "^13.0.6",
        "@svgr/webpack": "^6.2.1",
        "@types/webpack-env": "^1.17.0",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "babel-loader": "^8.2.5",
        "babel-plugin-import": "^1.13.3",
        "babel-plugin-lodash": "^3.3.4",
        "babel-plugin-transform-remove-console": "^6.9.4",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.1",
        "env-cmd": "^10.1.0",
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.30.0",
        "file-loader": "^6.2.0",
        "fork-ts-checker-webpack-plugin": "^7.2.11",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^7.0.4",
        "image-webpack-loader": "^8.1.0",
        "lerna": "^4.0.0",
        "less": "^3.7.1",
        "less-loader": "^11.0.0",
        "lint-staged": "^13.0.0",
        "mini-css-extract-plugin": "^2.6.0",
        "portfinder": "^1.0.28",
        "postcss": "^8.4.14",
        "postcss-loader": "^7.0.0",
        "postcss-preset-env": "^7.7.0",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "rollup-plugin-node-polyfills": "^0.2.1",
        "sass": "^1.52.2",
        "sass-loader": "^13.0.0",
        "sass-resources-loader": "^2.2.5",
        "spr": "^0.1.0",
        "thread-loader": "^3.0.4",
        "ts-loader": "^9.3.0",
        "typescript": "^4.7.2",
        "url-loader": "^4.1.1",
        "webpack": "^5.73.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.9.1"
    },
    "dependencies": {
        "@babel/runtime": "^7.16.3",
        "antd": "^4.17.1",
        "axios": "^0.27.2",
        "crypto-js": "^4.1.1",
        "father-build": "^1.20.4",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-router-dom": "^6.3.0"
    }
}
